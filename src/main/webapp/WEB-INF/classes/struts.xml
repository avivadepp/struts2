<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <!--设置上传文件最大为10M-->
    <constant name="struts.multipart.maxSize" value="10240000"/>
    <package name="basicstruts" extends="struts-default">
        <!--show是ProductAction里面的方法，访问的是http://localhost:8080/struts2/showProduct界面-->
        <action name="showProduct" class="pojo.ProductAction" method="show">
            <result name="show">show.jsp</result>
        </action>

        <!--访问http://localhost:8080/struts2/addProduct.jsp并提交数据-->
        <action name="addProduct" class="pojo.ProductAction" method="add">
            <result name="show">show.jsp</result>
        </action>

        <action name="upload" class="pojo.UploadAction" method="upload">
            <result name="success">success.jsp</result>
        </action>
    </package>
</struts>